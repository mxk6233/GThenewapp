<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">
    <EditText
        android:id="@+id/input_podcast_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Podcast Title"
        android:layout_marginBottom="16dp"/>
    <EditText
        android:id="@+id/input_podcast_host"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Host"
        android:layout_marginBottom="16dp"/>
    <EditText
        android:id="@+id/input_podcast_episode_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Episode Count"
        android:inputType="number"
        android:layout_marginBottom="16dp"/>
    <EditText
        android:id="@+id/input_podcast_publisher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Publisher"
        android:layout_marginBottom="24dp"/>
    <Button
        android:id="@+id/save_podcast_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Podcast"/>
</LinearLayout> 