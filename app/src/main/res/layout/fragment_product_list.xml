<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">

        <TextView
            android:id="@+id/product_list_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Products List"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/refresh_button"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Refresh"
            android:textSize="12sp"
            android:padding="4dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:background="@color/colorPrimary" />

        <Button
            android:id="@+id/load_data_button"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Load Data"
            android:textSize="12sp"
            android:padding="4dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:background="@color/colorPrimary" />

        <Button
            android:id="@+id/sync_firebase_button"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Sync with Firebase"
            android:textSize="12sp"
            android:padding="4dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:background="@color/colorPrimary" />

        <Button
            android:id="@+id/push_firebase_button"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Push to Firebase"
            android:textSize="12sp"
            android:padding="4dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:background="@color/colorPrimary" />
    </LinearLayout>
    <AutoCompleteTextView
        android:id="@+id/product_search_autocomplete"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:hint="Search products..."
        android:layout_marginBottom="4dp"
        android:inputType="text"
        android:textSize="14sp"
        android:padding="4dp" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"
        android:scrollbarStyle="insideOverlay" />
</LinearLayout> 