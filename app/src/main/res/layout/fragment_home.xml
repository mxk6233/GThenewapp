<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <TextView
        android:id="@+id/home_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/frag_home_welcome"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is your home screen. Use the navigation drawer to access different features."
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/test_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Button - Click Me!"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/colorPrimary" />

    <Button
        android:id="@+id/populate_firebase_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Sample Books to Firebase"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/colorPrimary" />

    <Button
        android:id="@+id/sync_sqlite_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sync Local Books to Firebase"
        android:padding="16dp"
        android:background="@color/colorPrimary" />

</LinearLayout>