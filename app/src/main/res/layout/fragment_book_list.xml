<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/refresh_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Refresh"
            android:textSize="14sp"
            android:icon="@drawable/ic_refresh"
            app:iconPadding="8dp"
            android:layout_marginBottom="8dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/load_data_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Load Data"
            android:textSize="14sp"
            android:icon="@drawable/ic_download"
            app:iconPadding="8dp"
            android:layout_marginBottom="8dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sync_firebase_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sync with Firebase"
            android:textSize="14sp"
            android:icon="@drawable/ic_sync"
            app:iconPadding="8dp"
            android:layout_marginBottom="8dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/push_firebase_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Push to Firebase"
            android:textSize="14sp"
            android:icon="@drawable/ic_cloud_upload"
            app:iconPadding="8dp"
            android:layout_marginBottom="8dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
    </LinearLayout>

    <AutoCompleteTextView
        android:id="@+id/book_search_autocomplete"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:hint="Search books..."
        android:layout_marginBottom="4dp"
        android:inputType="text"
        android:textSize="14sp"
        android:padding="4dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"
        android:scrollbarStyle="insideOverlay" />

</LinearLayout>